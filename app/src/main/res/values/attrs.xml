<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ArcProgress">
        <attr name="progress" format="integer"/>
        <attr name="angle" format="float"/>
        <attr name="stroke_width" format="dimension"/>
        <attr name="max" format="integer"/>

        <attr name="unfinished_color" format="color"/>
        <attr name="finished_color" format="color"/>

        <attr name="text_color" format="color"/>

        <attr name="suffix_text" format="string"/>

        <attr name="bottom_text" format="string"/>
        <attr name="bottom_text_size" format="dimension"/>

        <attr name="progress_text" format="string"/>
        <attr name="progress_text_size" format="dimension"/>
        <attr name="progress_typeface" format="enum">
            <enum name="typeface_default" value="0" />
            <enum name="typeface_bold" value="1" />
        </attr>
    </declare-styleable>
</resources>